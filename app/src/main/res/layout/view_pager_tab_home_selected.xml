<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/dark_green_900"
        app:cardCornerRadius="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tab_home_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/green_a_400"
            android:gravity="center_vertical"
            android:text="@string/fragment_home_title"
            android:textColor="@color/green_a_400"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>