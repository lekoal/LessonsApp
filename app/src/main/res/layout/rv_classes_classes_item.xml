<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_selected_dot"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:visibility="invisible"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_green" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_unselected_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:cardBackgroundColor="@color/green_a_200"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@id/rv_selected_dot"
        app:layout_constraintEnd_toEndOf="@id/rv_selected_dot"
        app:layout_constraintStart_toStartOf="@id/rv_selected_dot"
        app:layout_constraintTop_toTopOf="@id/rv_selected_dot" />

    <View
        android:id="@+id/rv_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/green_a_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rv_unselected_dot"
        app:layout_constraintStart_toStartOf="@id/rv_unselected_dot"
        app:layout_constraintTop_toTopOf="@id/rv_unselected_dot" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rv_class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/rv_selected_dot"
        app:layout_constraintStart_toEndOf="@id/rv_selected_dot"
        app:layout_constraintTop_toTopOf="@id/rv_selected_dot"
        tools:text="8:00 - 8:45" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_class_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/grey_900"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_selected_dot"
        app:layout_constraintWidth_percent="0.85">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/rv_lesson_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/grey_800"
                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rv_lesson_letter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    tools:text="H" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/rv_lesson_letter"
                app:layout_constraintTop_toTopOf="@id/rv_lesson_letter"
                tools:text="History" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rv_lesson_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:drawableTint="@color/grey_500"
                android:textColor="@color/grey_500"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/rv_lesson_letter"
                app:layout_constraintTop_toBottomOf="@id/rv_lesson_title"
                tools:text="Teacher: Mrs Who" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/open_in_skype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="-50dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="end|center_vertical"
            android:background="@color/blue_500">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_videocam_24"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingTop="50dp"
                android:layout_gravity="center"
                android:rotation="90"
                android:text="@string/open_in_skype"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>